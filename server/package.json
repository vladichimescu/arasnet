{
  "name": "@arasnet/server",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "dotenv -e ../.env -e .env -- node db",
    "debug": "dotenv -e ../.env -e .env -- node src/index.js --inspect",
    "start": "dotenv -e ../.env -e .env -- node src/index.js",
    "build": "dotenv -e ../.env -e .env -c production -- node esbuild",
    "serve": "pm2 start dist/index.js --name @arasnet/server",
    "stop": "pm2 delete @arasnet/server"
  },
  "dependencies": {
    "@arasnet/functions": "*",
    "@arasnet/types": "*",
    "json-server": "^0.17.4",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "dotenv-cli": "^7.4.2",
    "esbuild": "^0.23.1",
    "esbuild-plugin-noexternal": "^0.1.6",
    "pm2": "^5.4.2"
  },
  "volta": {
    "extends": "../package.json"
  }
}
