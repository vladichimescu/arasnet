{
  "name": "arasnet",
  "version": "0.1.0",
  "workspaces": {
    "packages": [
      "portal",
      "server",
      "libs/*"
    ]
  },
  "private": true,
  "devDependencies": {
    "@miller-svt/prettier-plugin-sort-imports": "^4.4.1",
    "prettier": "^3.3.3"
  },
  "scripts": {
    "clean": "rm -rf .yarn dist portal/dist server/dist && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "format": "prettier --write \"**/*.{css,scss,js,jsx,json,md}\"",
    "start": "yarn workspaces foreach --all --parallel run start",
    "build": "yarn workspaces foreach --all --parallel run build",
    "serve": "yarn workspaces foreach --all --parallel run serve",
    "stop": "yarn workspaces foreach --all --parallel run stop",
    "prepare": "rm -rf dist && mkdir -p dist && mv portal/dist dist/portal && mv server/dist dist/server",
    "deploy": "scp -r dist/* admin@arasnet.redirectme.net:/home/admin/arasnet/"
  },
  "engines": {
    "node": "20.16.0",
    "yarn": "4.4.0"
  },
  "volta": {
    "node": "20.16.0",
    "yarn": "4.4.0"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "plugins": [
      "@miller-svt/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^@arasnet/(.*)$",
      "^../",
      "^./",
      "^./*.*.(c|sc)ss"
    ],
    "importOrderParserPlugins": [
      "jsx",
      "importAttributes"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
