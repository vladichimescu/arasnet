{
  "name": "arasnet",
  "version": "0.1.0",
  "workspaces": {
    "packages": [
      "portal",
      "server",
      "libs/*"
    ]
  },
  "private": true,
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.3.3"
  },
  "scripts": {
    "clean": "rm -rf .yarn dist portal/dist server/dist && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "format": "prettier --write \"**/*.{css,scss,js,jsx,json,md}\"",
    "start": "yarn workspaces foreach --all --parallel run start",
    "build": "yarn workspaces foreach --all --parallel run build",
    "serve": "yarn workspaces foreach --all --parallel run serve",
    "stop": "yarn workspaces foreach --all --parallel run stop",
    "deploy": "rm -rf dist && mkdir -p dist/portal dist/server && yarn deploy:copy",
    "deploy:copy": "cp -R {package.json,.yarnrc.yml,libs} dist/ && cp -R portal/{package.json,dist} dist/portal/ && cp -R server/{package.json,dist} dist/server/"
  },
  "engines": {
    "node": "20.16.0",
    "yarn": "4.4.0"
  },
  "volta": {
    "node": "20.16.0",
    "yarn": "4.4.0"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^@arasnet/(.*)$",
      "^../",
      "^./",
      "^./*.*.(c|sc)ss"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
